@model DataLayer.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/calender.js/js-persian-cal.css" rel="stylesheet" />

    <title>ثبت نام</title>
</head>
<body>
    <br />
    <div class="container">
        <div class="col-lg-offset-4">
        </div>
        <div class="col-lg-8">
            <fieldset>
                <legend>فرم ثبت نام</legend>
                
                    <form>
                        <div class="form-group">
                            <label for="Fullname">نام و نام خانوادگی</label>
                            <input type="text" class="form-control" id="fullname" name="FullName" placeholder="نام و نام خانوادگی را وارد کنید">
                        </div>
                        <div class="form-group">
                            <label for="SignUpFormControl">تاریخ تولد</label>
                            <input type="text" class="form-control" id="persianCal" name="BirthDate" placeholder="تاریخ تولد به شمسی">
                        </div>
                        <div class="form-group">
                            <label for="Email">ایمیل</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="پست الکترونیک  را وارد کنید" />
                        </div>
                        <div class="form-group">
                            <label for="password">رمز عبور</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="رمز عبور را وارد کنید" />
                        </div>
                        <div class="form-group">
                            <label for="password"> تکرار رمز عبور</label>
                            <input type="password" class="form-control" id="Confirmpassword" name="ConfirmPassword" placeholder="رمز عبور را تکرار کنید" />
                        </div>
                        <div class="form-group">
                            <label for="Bio">شرح حال و تجربیات</label>
                            <textarea class="form-control" id="bio" name="Bio" placeholder="سوابق و تجربیات را به طور مختصر بنویسید" rows="6"></textarea>
                        </div>
                        <button class="btn btn-primary" type="submit">ثبت</button>
                    </form>
                
            </fieldset>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/calender.js/js-persian-cal.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.min.js"></script>
    <script>
        var perCal = new AMIB.persianCalendar('persianCal');
    </script>
</body>
</html>
