@model IEnumerable<ViewModels.CategoryViewModel>
<section class="category-section border-radius">
    <header><i class="fa fa-folder-open-o"></i> <h3> دسته بندی ها </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li><a href="/Category/@item.CategoryID/@item.CatTittle"> @item.CatTittle <span>@item.Count</span></a></li>
        }
    </ul>
</section>

