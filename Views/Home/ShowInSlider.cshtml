@model IEnumerable<DataLayer.News>

<div class="news-slider border-radius">
    <div id="slider-one" class="owl-carousel">
        @foreach (var item in Model)
        {
            <div class="item">
                <img src="/NewsImages/@item.ImageName">
                <div class="left-side">
                    <h2> <a href="/News/@item.NewsID">@item.Tittle</a></h2>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @item.UploadDate</span>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    </div>
    <a href="/Archive" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>
